        var sceneBounds = new OpenLayers.Bounds(
            -136, 52,
            -56, 20
        )

        var options = {
            controls: [
                new OpenLayers.Control.PanZoomBar({
                    position: new OpenLayers.Pixel(2, 15),
                    zoomWorldIcon: true
